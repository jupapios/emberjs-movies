<header class="page-header container">
  <nav class="breadcrumbs">
    <p>
      {{#link-to 'index' class="breadcrumbs__link qa-home"}}Main page{{/link-to}}
    </p>
  </nav>
</header>

<div class="highlight-module  highlight-module--left highlight-module--custom">
  <div class="highlight-module__container icon-star">
    <div class="highlight-module__content g-wide--push-1 g-wide--pull-1 g-medium--push-1">
      <p class="highlight-module__title qa-title">
        {{title}}
      </p>
      <ul class="highlight-module__list">
        <li>
          <strong>Score:</strong> <span class="qa-score">{{score}}</span>
        </li>
        <li>
          <strong>Release date:</strong> <span class="qa-date">{{release}}</span>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <div class="highlight-module highlight-module--custom highlight-module--inline g--half g--last">
    <h3 class="highlight-module__title">Actors</h3>
    <ul class="highlight-module__list">
      {{#each actors}}
        <li>{{name}} - {{age}}</li>
      {{/each}}
    </ul>
  </div>
</div>
